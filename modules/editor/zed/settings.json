{
  "features": {
    "edit_prediction_provider": "zed"
  },
  "assistant": {
    "default_model": {
      "provider": "openai",
      "model": "gpt-4o"
    },
    "version": "2"
  },
  "ui_font_size": 16,
  "buffer_font_size": 16,
  "theme": {
    "mode": "system",
    "light": "Catppuccin Frapp√©",
    "dark": "One Dark"
  },
  "show_extension_recommendations": false,
  "file_types": {
    "Nix": ["*.nix"]
  },
  "languages": {
    "Nix": {
      "file_extensions": ["nix"],
      "language_servers": ["nixd"],
      "formatter": {
        "external": {
          "command": "/run/current-system/sw/bin/alejandra",
          "arguments": ["--quiet", "-"]
        }
      }
    }
  }
}
