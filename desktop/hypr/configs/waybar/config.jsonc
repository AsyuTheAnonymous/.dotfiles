        "font-size": "14pt"
    },

    "clock#month": {
        "format": "{:%h}",
        "font-size": "14pt"
    },

    "clock#calendar": {
        "format": "{:%F}",
        "tooltip-format": "<tt><small>{calendar}</small></tt>",
        "font-size": "14pt",
        "actions": {
            "on-click-right": "mode"
        },
        "calendar": {
            "mode": "month",
            "mode-mon-col": 3,
            "weeks-pos": "right",
            "on-scroll": 1,
            "on-click-right": "mode",
            "format": {
                "months": "<span color='#f4dbd6'><b>{}</b></span>",
                "days": "<span color='#cad3f5'><b>{}</b></span>",
                "weeks": "<span color='#c6a0f6'><b>W{}</b></span>",
                "weekdays": "<span color='#a6da95'><b>{}</b></span>",
