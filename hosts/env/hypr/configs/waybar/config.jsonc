    "spacing": 8, // Increased spacing for 4K
    "modules-left": ["hyprland/workspaces", "hyprland/submap"],
    "modules-center": ["clock#time", "clock#week", "clock#month", "clock#calendar"],
    "modules-right": ["bluetooth", "network", "group/misc"],

    // Modules Config
    "hyprland/workspaces": {
        "on-click": "activate",
        "format": "{icon}",
        "format-icons": {
