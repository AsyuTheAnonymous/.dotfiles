* {
    font: "JetBrainsMono Nerd Font 10";
    background: rgba(30, 40, 60, 0.5); // Frosted glass tone
    foreground: #cbe1ff;
    selected: #91c4ff;
    active: #a6e3a1;
    urgent: #f38ba8;
    border-color: rgba(145, 200, 255, 0.25);
    separatorcolor: rgba(145, 200, 255, 0.1);
}

window {
    transparency: "real";
    background-color: @background;
    border: 2px;
    padding: 10px;
    border-radius: 12px;
}

mainbox {
    background-color: transparent;
}

inputbar {
    background-color: rgba(20, 30, 50, 0.5);
    padding: 8px;
    border-radius: 10px;
    children: [ prompt, entry ];
}

prompt {
    padding: 0 10px;
    text-color: @foreground;
}

entry {
    text-color: @foreground;
    background-color: transparent;
}

listview {
    background-color: @background;
    dynamic: false;
    alternate-row-color: @background;
    scrollbar: true;
    padding: 8px;
    spacing: 6px;
    border: 0px;
}

element {
    padding: 6px 12px;
    text-color: @foreground;
    background-color: transparent;
    border-radius: 8px;
}

element selected {
    background-color: rgba(145, 200, 255, 0.2);  // blue glass highlight
    text-color: @selected;
}

element urgent {
    text-color: @urgent;
}

element active {
    text-color: @active;
}

message {
    border: 0px;
    padding: 12px;
    background-color: rgba(255, 255, 255, 0.05);
    border-radius: 10px;
    margin: 10px 0px;
}
